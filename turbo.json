{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "pipeline": {
        "generate": {
            "cache": false
        },
        "build": {
            "dependsOn": [
                "^build",
                "^generate"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": [
                "^generate"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "type-check": {
            "dependsOn": [
                "^type-check"
            ]
        },
        "clean": {
            "cache": false
        }
    }
}