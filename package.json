{
  "name": "@signage-erp/root",
  "version": "1.0.0",
  "private": true,
  "description": "SignageERP - ERP System for Signage Shops with Dynamic Pricing Engine",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@signage-erp/web",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@signage-erp/web",
    "lint": "turbo run lint",
    "lint:web": "turbo run lint --filter=@signage-erp/web",
    "type-check": "turbo run type-check",
    "type-check:web": "turbo run type-check --filter=@signage-erp/web",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akkpol/signage-erp-monorepo.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "next-themes": "^0.4.6"
  }
}
